{
  "name": "reactNativeExample",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test:ios:debug":
      "detox build -c 'ios.sim.debug' && detox test -c 'ios.sim.debug'",
    "test:ios":
      "detox build -c 'ios.sim.release' >/dev/null 2>&1 && detox test -c 'ios.sim.release' --debug-synchronization 10000",
    "test:android:debug":
      "detox build -c 'android.emu.debug' && detox test -c 'android.emu.debug'",
    "test:android":
      "detox build -c 'android.emu.release' && detox test -c 'android.emu.release' -u"
  },
  "dependencies": {
    "react": "16.0.0-beta.5",
    "react-native": "0.49.3"
  },
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "detox": "^5.9.2",
    "mocha": "^4.0.1"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath":
          "ios/build/Build/Products/Debug-iphonesimulator/reactNativeExample.app",
        "build":
          "xcodebuild -project ios/reactNativeExample.xcodeproj -scheme reactNativeExample -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "ios.sim.release": {
        "binaryPath":
          "ios/build/Build/Products/Release-iphonesimulator/reactNativeExample.app",
        "build":
          "export RCT_NO_LAUNCH_PACKAGER=true && xcodebuild -project ios/reactNativeExample.xcodeproj -scheme reactNativeExample -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/app-debug.apk",
        "build":
          "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/app-release.apk",
        "build":
          "cd android && export RCT_NO_LAUNCH_PACKAGER=true && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      }
    }
  }
}
